#!/usr/bin/env bash

VALID_ARGS=$(getopt -o udf --long up,down,fix -- "$@")
export USER="porto"
export COMPANY_VPN_HOST="vpn03.sunrise.net/VPN_sunrise"

function vpn-up() {
	if [[ -z $COMPANY_VPN_HOST ]]; then
		echo "Please set COMPANY_VPN_HOST env var"
		return
	fi

	if [[ "$1" == "split" ]]; then
		echo "Starting the vpn with split tunneling ..."
		sudo openconnect --background --script=./vpn-slice --user=$USER $COMPANY_VPN_HOST
	else
		echo "Starting the vpn ..."
		sudo openconnect --background --user=$USER $COMPANY_VPN_HOST
	fi
}

function vpn-split() {
	vpn-up split
}

function vpn-down() {
	sudo kill -2 "$(pgrep openconnect)"
}

function vpn-fix() {
	IFACE=enp34s0
	sudo ifconfig $IFACE down
	sudo route flush
	sudo ifconfig $IFACE up
}

eval set -- "$VALID_ARGS"
while true; do
	case "$1" in
	-u | --up)
		vpn-up "$2"
		shift
		;;
	-d | --down)
		vpn-down
		shift
		;;
	-f | --fix)
		vpn-fix
		shift
		;;
	--)
		shift
		break
		;;
	esac
done
